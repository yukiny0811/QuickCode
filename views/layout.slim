html lang="ja"
  head
    meta charset="utf-8"
    title Quick Coder
    script src="/js/font.js"
    script src="https://code.jquery.com/jquery-3.5.1.min.js"
    script src="//cdn.quilljs.com/1.3.6/quill.min.js"
    link href="//cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet"
    script src="/js/main.js"
    link rel='stylesheet' type='text/css' href='/sass/base.css'
  body
    .allContainer
      .screenCover
      .navigationContainer
        .wrapper
          .smallWrapper
            a href="/"
              h1.mainTitle QuickCoder
            form action="/search" method="post"
              input.searchInput type="search" placeholder="search" name="searchKey"
              .searchOptionContainer
                hr.line
                label
                  input type="checkbox" name="search_option[]" value="title" checked="checked" title
                hr.line
                / label
                /   input type="checkbox" name="search_option[]" value="language" language 
                / hr.line
                label
                  input type="checkbox" name="search_option[]" value="framework" framework
                hr.line
                label
                  input type="checkbox" name="search_option[]" value="description" description
          .smallWrapper
            - if is_user_logged_in
              form action="/#{current_user.name}/post/new" method="get"
                input.newPostButton type="submit" value="投稿"
              img.profileImage src="/img/testImage.png"
              .profileDropdownContainer
                hr.line
                form action="/logout" method="post"
                  input.logoutButton type="submit" value="ログアウト"
                hr.line
                form action="/#{current_user.name}" method="get"
                  input.userpageButton type="submit" value="マイページ"
                hr.line
            - else 
              form action="/signup" method="get"
                input.signupButton type="submit" value="新規登録"
              form action="/login" method="get"
                input.loginButton type="submit" value="ログイン"
      == yield